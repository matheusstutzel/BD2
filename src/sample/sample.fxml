<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="Host"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="host"/>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="2"  text="BD"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="2"  fx:id="BD"/>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="3"  text="User"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="3"  fx:id="USER"/>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="4"  text="Password"/>
    <PasswordField GridPane.columnIndex="2" GridPane.rowIndex="4"  fx:id="PASSWORD"/>
    <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
           text=
                    "teste" onAction=
                    "#sayHelloWorld"/>

    <Label

            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            fx:id="helloWorld"/>


</GridPane>