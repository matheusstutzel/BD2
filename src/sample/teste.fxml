<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Teste" alignment="center" hgap="10" vgap="10">
    <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="Digite o nome da tabela" fx:id="txt"/>
    <TextField
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            fx:id="textField"/>

    <Button
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            text=
                    "Select" onAction=
                    "#sayHelloWorld"/>


</GridPane>